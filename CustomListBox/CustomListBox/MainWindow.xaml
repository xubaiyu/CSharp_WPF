<Window x:Class="CustomListBox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Window.Resources>
        <DataTemplate x:Key="DataTemplate1">
            <Rectangle  RadiusX="8"  StrokeThickness="2" Opacity="0.5" Fill="Beige" Stroke="Blue" MinHeight="40" MinWidth="80" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>
        </DataTemplate>
        <ControlTemplate x:Key="ListBoxControlTemplate1" TargetType="{x:Type ListBox}">
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <WrapPanel Orientation="Vertical" IsItemsHost="True">
                </WrapPanel>
            </ScrollViewer>
        </ControlTemplate>
    </Window.Resources>
    <Grid>
        <ListBox Width="100" HorizontalAlignment="Left" x:Name="myListBox" ItemTemplate="{DynamicResource DataTemplate1}" Template="{DynamicResource ListBoxControlTemplate1}" />

    </Grid>
</Window>
